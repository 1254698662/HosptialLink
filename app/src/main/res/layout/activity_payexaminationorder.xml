<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hl_color_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="@mipmap/hl_bg_sawtooth"
                android:padding="@dimen/hl_global_distance_15"
                android:layout_height="wrap_content">
            <RelativeLayout

                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/hl_global_distance_15"
                >

                <ImageView
                    android:id="@+id/iv_appointhead"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_marginRight="@dimen/hl_global_distance_15"
                    android:src="@mipmap/hl_icon_pay_order" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_appointhead"
                    android:layout_alignTop="@id/iv_appointhead"
                    android:layout_toRightOf="@id/iv_appointhead"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textColor="@color/hl_color_blue"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:text="999"
                            android:textColor="@color/hl_color_blue"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:text="高端VIP全面体检套餐"
                        android:textColor="@color/hl_textcolor_dark"
                        android:textSize="@dimen/hl_textsize_18" />
                </LinearLayout>
            </RelativeLayout>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/hl_color_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/hl_global_distance_15"
                    android:text="选择支付方式"
                    android:textColor="@color/hl_textcolor_light"
                    android:textSize="@dimen/hl_textsize_18" />

                <RelativeLayout
                    android:id="@+id/re_alipay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/hl_global_distance_15">

                    <ImageView
                        android:id="@+id/iv_alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="20dp"
                        android:src="@mipmap/hl_icon_alipay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_alipay"
                        android:text="支付宝"
                        android:textColor="@color/hl_textcolor_dark"
                        android:textSize="@dimen/hl_textsize_18" />

                    <ImageView
                        android:id="@+id/iv_alipay_sel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/hl_icon_paystyle" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/hl_global_distance_15"
                    android:background="@color/hl_color_background" />

                <RelativeLayout
                    android:id="@+id/re_wchat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/hl_global_distance_15">

                    <ImageView
                        android:id="@+id/iv_wchat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="20dp"
                        android:src="@mipmap/hl_icon_wchat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_wchat"
                        android:text="微信"
                        android:textColor="@color/hl_textcolor_dark"
                        android:textSize="@dimen/hl_textsize_18" />

                    <ImageView
                        android:id="@+id/iv_wchat_sel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/hl_icon_paystyle" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/hl_global_distance_15"
                    android:background="@color/hl_color_background" />


                <RelativeLayout
                    android:id="@+id/re_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/hl_global_distance_15">

                    <ImageView
                        android:id="@+id/iv_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="20dp"
                        android:src="@mipmap/hl_icon_bank" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_bank"
                        android:text="银联卡"
                        android:textColor="@color/hl_textcolor_dark"
                        android:textSize="@dimen/hl_textsize_18" />

                    <ImageView
                        android:id="@+id/iv_bank_sel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/hl_icon_paystyle" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@color/hl_color_white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">

                    <LinearLayout
                        android:id="@+id/ly_callphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/hl_global_distance_15">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:src="@mipmap/hl_icon_phone_blue_big" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="咨询医院"
                            android:textColor="@color/hl_textcolor_light"
                            android:textSize="@dimen/hl_textsize_15" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ly_price"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignBottom="@id/ly_callphone"
                        android:layout_toLeftOf="@id/ly_callphone"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/hl_global_distance_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_toRightOf="@id/ly_callphone"
                            android:gravity="bottom"
                            android:text="价格 ："
                            android:textColor="@color/hl_textcolor_dark"
                            android:textSize="@dimen/hl_textsize_20" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:text="¥ "
                            android:textColor="@color/hl_color_blue"
                            android:textSize="@dimen/hl_textsize_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="bottom"
                            android:text="999"
                            android:textColor="@color/hl_color_blue"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/hl_global_distance_15"
                            android:layout_marginTop="@dimen/hl_global_distance_15"
                            android:background="@color/hl_color_background" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_topay"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@color/hl_color_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="去支付"
                    android:textColor="@color/hl_color_white"
                    android:textSize="@dimen/hl_textsize_20" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
