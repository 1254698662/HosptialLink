<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hl_color_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hl_global_distance_10"

        android:background="@color/hl_color_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/hl_global_distance_15">

            <ImageView
                android:id="@+id/iv_appointhead"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="@dimen/hl_global_distance_15"
                android:src="@mipmap/hl_icon_confirm_examination" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_appointhead"
                android:layout_alignTop="@id/iv_appointhead"
                android:layout_toRightOf="@id/iv_appointhead"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="高端VIP全面体检套餐"
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_20"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="浙江省杭州市第一人民医院"
                    android:textColor="@color/hl_textcolor_light"
                    android:textSize="@dimen/hl_textsize_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="¥"
                        android:textColor="@color/hl_color_blue"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="bottom"
                        android:text="999"
                        android:textColor="@color/hl_color_blue"
                        android:textSize="@dimen/hl_textsize_18" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <ImageView style="@style/hl_global_underline_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/hl_global_distance_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="体检地点" />

                <TextView
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="浙江省杭州市第一人民医院F座5楼" />


            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="门诊类型" />

                <TextView
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自费" />
            </LinearLayout>

        </LinearLayout>


        <ImageView style="@style/hl_global_underline_bg" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/hl_global_distance_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_textcolor_light"
                    android:textSize="@dimen/hl_textsize_18"
                    android:text="温馨提醒:" />



            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/hl_icon_circle_poi"
                    android:drawablePadding="10dp"
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="28dp"
                    android:text="实名制预约，就诊人信息不符将无法取号" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/hl_icon_circle_poi"
                    android:drawablePadding="10dp"
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="听诊将短信通知，请保持手机畅通" />
            </LinearLayout>

            <LinearLayout
                android:paddingTop="5dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/hl_icon_circle_poi"
                    android:drawablePadding="10dp"
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="28dp"
                    android:text="实名制预约，就诊人信息不符将无法取号" />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/hl_color_background"
            android:layout_height="15dp" />
        <LinearLayout
            android:background="@color/hl_color_white"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/hl_global_distance_15"
                android:paddingRight="@dimen/hl_global_distance_15"
                android:paddingBottom="@dimen/hl_global_distance_10"
                android:paddingTop="@dimen/hl_global_distance_10"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_20"
                    android:text="体检人"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/hl_icon_arrow_right_big"
                    android:layout_height="wrap_content" />

                <TextView
                    android:paddingRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv_arrow_right"
                    android:layout_width="wrap_content"
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_20"
                    android:text="周末"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
            <ImageView style="@style/hl_global_underline_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/hl_global_distance_15"
                android:paddingRight="@dimen/hl_global_distance_15"
                android:paddingBottom="@dimen/hl_global_distance_10"
                android:paddingTop="@dimen/hl_global_distance_10"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_20"
                    android:text="预约日期"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_arrow_right2"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/hl_icon_arrow_right_big"
                    android:layout_height="wrap_content" />

                <TextView
                    android:paddingRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv_arrow_right2"
                    android:layout_width="wrap_content"
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_20"
                    android:text="08:20"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
            <ImageView style="@style/hl_global_underline_bg" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/hl_global_distance_15"
                android:paddingRight="@dimen/hl_global_distance_15"
                android:paddingBottom="@dimen/hl_global_distance_10"
                android:paddingTop="@dimen/hl_global_distance_10"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_20"
                    android:text="支付方式"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_arrow_right3"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:visibility="invisible"
                    android:src="@mipmap/hl_icon_arrow_right_big"
                    android:layout_height="wrap_content" />

                <TextView
                    android:paddingRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv_arrow_right3"
                    android:layout_width="wrap_content"
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_20"
                    android:text="在线支付"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
