<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hl_color_background"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/hl_color_white"

        >
        <com.enjoyor.hospitallink.custom.CircularImage
            android:id="@+id/specialist_icon"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:background="@mipmap/icon_gh"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/specialist_icon"
            android:text="罗志祥"
            android:textSize="@dimen/hl_textsize_15"
            android:layout_alignTop="@id/specialist_icon"
            android:layout_marginLeft="18dp"
            android:id="@+id/doctor_name"
            android:textColor="@color/hl_textcolor_dark"
            />
        <TextView
            android:id="@+id/doctor_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/doctor_name"
            android:textSize="@dimen/hl_textsize_12"
            android:text="主治医生"
            android:layout_alignBottom="@id/doctor_name"
            android:layout_marginLeft="11dp"
            android:textColor="@color/hl_textcolor_dark"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/specialist_icon"
            android:layout_centerVertical="true"
            android:text="诊疗记录：123次"
            android:layout_marginLeft="18dp"
            android:textSize="@dimen/hl_textsize_12"
            android:textColor="@color/hl_textcolor_light"
            android:layout_below="@id/doctor_n"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/specialist_icon"
            android:layout_alignBottom="@+id/specialist_icon"
            android:layout_marginLeft="18dp"
            android:textSize="@dimen/hl_textsize_12"
            android:textColor="@color/hl_textcolor_light"
            android:text="擅长：专治吹牛逼"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hl_color_white"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:id="@+id/view_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<ImageView
    android:id="@+id/locd_icon"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@mipmap/locd_dao"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="9dp"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="专业擅长"
    android:textColor="@color/hl_textcolor_light"
    android:textSize="@dimen/hl_textsize_18"
    android:layout_toRightOf="@id/locd_icon"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="14dp"
   android:layout_centerVertical="true"
    />
        </RelativeLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginLeft="15dp"
    android:textSize="@dimen/hl_textsize_15"
    android:textColor="@color/hl_textcolor_dark"
    android:text="专治吹牛逼"
    android:layout_below="@id/view_s"
    android:layout_marginBottom="10dp"

    />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hl_color_white"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/doctor_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/iocn_doctor"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="9dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医生排班"
            android:textColor="@color/hl_textcolor_light"
            android:textSize="@dimen/hl_textsize_18"
            android:layout_toRightOf="@id/doctor_icon"
          android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            />


    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/hl_color_white"
    >
    <RelativeLayout
        android:layout_width="45dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/area_color_line"
                ></View>
            <TextView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:text="排班"
                android:textSize="@dimen/hl_textsize_12"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:text="上午"
                android:textSize="@dimen/hl_textsize_12"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/area_color_line"
                ></View>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"

            >
            <TextView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:text="下午"
                android:textSize="@dimen/hl_textsize_12"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/area_color_line"
                ></View>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/area_color_line"
            ></View>
    </RelativeLayout>


        <GridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:numColumns="7"

            ></GridView>
    </LinearLayout>





</LinearLayout>