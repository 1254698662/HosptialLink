<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hl_color_background"

    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/hl_color_white"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/hl_textsize_15"
        android:text="去访问医院微平台"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        />
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/arrow_right"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="15dp"
    />

</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

    <ListView
        android:id="@+id/big_departments_list"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:divider="#00000000"
        android:dividerHeight="0dip"

        ></ListView>





            <ListView
                android:id="@+id/sm_departments_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:divider="#00000000"
                android:dividerHeight="0dip"
                android:background="@color/hl_color_white"
                ></ListView>


    </LinearLayout>
</LinearLayout>