<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_weight="1.0"

        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/area_color_line"></View>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/area_color_line"
            android:layout_alignParentLeft="true"
            ></View>
        <TextView
            android:id="@+id/grid_data1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="周一"
            android:textSize="@dimen/hl_textsize_12"
            /><TextView
        android:id="@+id/grid_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_data1"
        android:layout_marginTop="3dp"
        android:text="10"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/hl_textsize_12"
        />

    </RelativeLayout>
</LinearLayout>