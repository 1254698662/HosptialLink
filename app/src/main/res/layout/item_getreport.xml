<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/hl_color_white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="@dimen/hl_global_distance_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="@dimen/hl_global_distance_15"
            android:id="@+id/iv_hospitalhead"
            android:src="@mipmap/icon_gh"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <LinearLayout
            android:layout_toRightOf="@id/iv_hospitalhead"
            android:layout_alignTop="@id/iv_hospitalhead"
            android:layout_alignBottom="@id/iv_hospitalhead"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/hl_textsize_20"
                android:text="望江县高级人民医院"
                android:textColor="@color/hl_textcolor_dark"
                />
            <TextView
                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                android:layout_marginTop="5dp"
                android:textSize="@dimen/hl_textsize_15"
                android:id="@+id/actual_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三甲"
                android:background="@drawable/ac_grade"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/doctor_mun"
                android:textSize="@dimen/hl_textsize_15"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="120优质好医生"
                android:textColor="@color/hl_textcolor_dark"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
