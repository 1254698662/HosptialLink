<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <ImageView
        android:id="@+id/actual_gh_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="21dp"
        android:background="@mipmap/icon_gh"
        />
    <TextView
        android:id="@+id/hospital_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/hl_textsize_18"
        android:text="望江县高级人民医院"
        android:layout_alignTop="@id/actual_gh_icon"
        android:layout_toRightOf="@id/actual_gh_icon"
        android:layout_marginLeft="21dp"
     android:textColor="@color/hl_textcolor_dark"
        />
<TextView
    android:id="@+id/actual_grade"
    android:layout_width="40dp"
    android:layout_height="20dp"
    android:text="三甲"
    android:layout_toRightOf="@id/actual_gh_icon"
    android:layout_marginLeft="24dp"
    android:layout_centerVertical="true"
    android:background="@drawable/ac_grade"
    android:gravity="center"
    />
    <TextView
        android:id="@+id/doctor_mun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/actual_gh_icon"
        android:layout_marginLeft="24dp"
        android:layout_alignBottom="@id/actual_gh_icon"
        android:text="120优质好医生"
        android:textColor="@color/hl_textcolor_dark"
        />
</RelativeLayout>
</LinearLayout>