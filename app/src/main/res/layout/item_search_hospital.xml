<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:visibility="visible"
    android:background="@color/hl_color_white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="@dimen/hl_global_distance_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_search_hospital"
            android:layout_width="100dp"
            android:src="@mipmap/hl_bg_hospital"
            android:scaleType="fitXY"
            android:layout_height="75dp" />

        <LinearLayout
            android:paddingLeft="@dimen/hl_global_distance_10"
            android:layout_toRightOf="@id/iv_search_hospital"
            android:layout_alignTop="@id/iv_search_hospital"
            android:layout_alignBottom="@id/iv_search_hospital"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="浙江省杭州市第一人名医院"
                android:textColor="@color/hl_textcolor_dark"
                android:textSize="@dimen/hl_textsize_18"
                android:layout_weight="2"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/tv_lev"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:text="三乙"
                    android:background="@drawable/hl_bg_green_fram"
                    android:textColor="@color/hl_color_green"
                    android:textSize="@dimen/hl_textsize_13"
                    android:layout_weight="1"
                    android:layout_height="0dp" />
                <TextView
                    android:paddingTop="3dp"
                    android:layout_width="match_parent"
                    android:text="123位优质医生"
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_15"
                    android:layout_weight="1"
                    android:layout_height="0dp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
