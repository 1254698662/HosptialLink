<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hl_color_background"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/hl_color_white"

        >
        <ImageView
            android:id="@+id/actual_gh_icon"
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:background="@mipmap/icon_gh"
            />
        <TextView
            android:id="@+id/hospital_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/hl_textsize_18"
            android:text="望江县高级人民医院"
            android:layout_alignTop="@id/actual_gh_icon"
            android:layout_toRightOf="@id/actual_gh_icon"
            android:layout_marginLeft="21dp"
            android:textColor="@color/hl_textcolor_dark"
            />



        <TextView
            android:id="@+id/actual_grade"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="三甲"
            android:layout_toRightOf="@id/actual_gh_icon"
            android:layout_marginLeft="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/zhijiao"
            android:gravity="center"
            android:textColor="#16807a"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"

            android:text="医保"
            android:layout_toRightOf="@id/actual_grade"
            android:layout_marginLeft="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/zhijiao2"
            android:gravity="center"
            android:textColor="#2b7cb2"
            />


        <TextView
            android:id="@+id/doctor_mun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/actual_gh_icon"
            android:layout_marginLeft="24dp"
            android:layout_alignBottom="@id/actual_gh_icon"
            android:text="120优质好医生"
            android:textColor="@color/hl_textcolor_dark"
            />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:background="@color/hl_color_white"

    >
    <TextView
        android:id="@+id/tou_hospittal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="医院介绍"
        android:textSize="@dimen/hl_textsize_12"
        android:textColor="@color/hl_textcolor_light"

        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"


        />
    <TextView
        android:layout_below="@id/tou_hospittal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=" "
        android:textSize="@dimen/hl_textsize_15"
        android:textColor="@color/hl_textcolor_dark"

        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
         android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"

        />

</RelativeLayout>


    </LinearLayout>



    </ScrollView>
</LinearLayout>