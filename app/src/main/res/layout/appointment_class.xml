<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"

    >

    <TextView
        android:id="@+id/appointment_class_specialist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:text="按专家预约"
        android:gravity="center"
        android:textSize="@dimen/hl_textsize_12"
        android:textColor="@color/hl_textcolor_dark"
        />
     <View
         android:layout_width="1dp"
         android:layout_height="30dp"
         android:background="@color/area_color_line"
         android:layout_gravity="center_vertical"

         ></View>
    <TextView
        android:id="@+id/appointment_class_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:text="按日期预约"
        android:gravity="center"
        android:textSize="@dimen/hl_textsize_12"
        android:textColor="@color/hl_textcolor_dark"
        />

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/area_color_line"

        ></View>
    <RelativeLayout
        android:id="@+id/appointment_class_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>
</LinearLayout>