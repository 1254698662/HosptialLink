<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hl_color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="@dimen/hl_global_distance_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hl_color_white">

        <ImageView
            android:id="@+id/iv_appointhead"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="@dimen/hl_textsize_15"
            android:src="@mipmap/hl_icon_doctor_search" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_appointhead"
            android:layout_alignTop="@id/iv_appointhead"
            android:layout_toRightOf="@id/iv_appointhead"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_examinationname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="高端VIP全面体检套餐"
                android:textColor="@color/hl_textcolor_dark"
                android:textSize="@dimen/hl_textsize_20"
                android:textStyle="bold" />

            <TextView
                android:paddingTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:singleLine="true"
                android:text="浙江省杭州市第一人名医院"
                android:textColor="@color/hl_textcolor_dark"
                android:textSize="@dimen/hl_textsize_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:text="¥"
                    android:textColor="@color/hl_color_blue"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:text="999"
                    android:textColor="@color/hl_color_blue"
                    android:textSize="@dimen/hl_textsize_15" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:gravity="bottom"
                    android:text="¥"
                    android:textColor="@color/hl_textcolor_light"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:text="999"
                    android:textColor="@color/hl_textcolor_light"
                    android:textSize="@dimen/hl_textsize_15" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/hl_icon_arrow_exam_big" />
    </RelativeLayout>
</LinearLayout>
