<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/hl_color_background"
    android:layout_height="match_parent">



    <LinearLayout
        android:background="@color/hl_color_white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:padding="@dimen/hl_global_distance_15"
            android:layout_width="match_parent"
            android:textSize="@dimen/hl_textsize_15"
            android:textColor="@color/hl_textcolor_light"
            android:text="浙江省杭州市第一人名医院"
            android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/re_reportstyle"
        android:padding="@dimen/hl_global_distance_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:text="报告单类别"
            android:textColor="@color/hl_textcolor_dark"
            android:textSize="@dimen/hl_textsize_15"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_arrowtop"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:src="@mipmap/hl_icon_arrow_right_big"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_report"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_arrowtop"
            android:layout_width="wrap_content"
            android:text="报告单类别"
            android:textColor="@color/hl_textcolor_dark"
            android:textSize="@dimen/hl_textsize_18"
            android:layout_height="wrap_content" />
    </RelativeLayout>


        <TextView
            android:layout_marginLeft="@dimen/hl_global_distance_15"
            android:background="@color/hl_color_background"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <RelativeLayout
            android:id="@+id/re_name"
            android:padding="@dimen/hl_global_distance_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:text="病人姓名"
                android:textColor="@color/hl_textcolor_dark"
                android:textSize="@dimen/hl_textsize_15"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/iv_arrowbottom"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:src="@mipmap/hl_icon_arrow_right_big"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_name"
                android:paddingRight="5dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_arrowbottom"
                android:layout_width="wrap_content"
                android:text="报告单类别"
                android:textColor="@color/hl_textcolor_dark"
                android:textSize="@dimen/hl_textsize_18"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:background="@color/hl_color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/hl_global_distance_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hl_textcolor_light"
                    android:textSize="@dimen/hl_textsize_12"
                    android:text="提示说明:" />



            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/hl_icon_circle_poi"
                    android:drawablePadding="10dp"
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您可在app上同步查看您的报告单结果。具体诊断结果一医嘱为准，报告单结果仅供参考。" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/hl_icon_circle_poi"
                    android:drawablePadding="10dp"
                    android:textColor="@color/hl_textcolor_dark"
                    android:textSize="@dimen/hl_textsize_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报告仅对送检标本负责" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
